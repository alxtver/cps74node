<div class="wrapper fadeInDown">
  <div id="formContent">

    <form action="/pkis/edit" method="POST" class="needs-validation" novalidate>

      <div class="input-field">
        <input id="type_pki" name="type_pki" type="text" class="form-control" aria-describedby="pkilHelp"
          placeholder="Тип ПКИ" value="{{pki.type_pki}}" required>
        <div class="invalid-feedback">
          Введите тип ПКИ!
        </div>
      </div>

      <div class="input-field">
        <input id="vendor" name="vendor" type="text" class="form-control" aria-describedby="vendorHelp"
          placeholder="Производитель" value="{{pki.vendor}}" required>
        <div class="invalid-feedback">
          Введите Производителя!
        </div>
      </div>

      <div class="input-field">
        <input id="model" name="model" type="text" class="form-control" placeholder="Модель" value="{{pki.model}}"
          required>
        <div class="invalid-feedback">
          Введите Модель!
        </div>
      </div>

      <div class="input-field">
        <input id="serial_number" name="serial_number" type="text" class="form-control" placeholder="Серийный номер"
          value="{{pki.serial_number}}" required>
        <div class="invalid-feedback">
          Введите серийный номер!
        </div>
      </div>

      <div class="input-field">
        <input id="country" name="country" type="text" class="form-control" placeholder="Страна изготовитель"
          value="{{pki.country}}" required>
        <div class="invalid-feedback">
          Введите страну!
        </div>
      </div>

      <div class="input-field">
        <input id="part" name="part" type="text" class="form-control" placeholder="Партия" value="{{pki.part}}"
          required>
        <div class="invalid-feedback">
          Введите название партии!
        </div>
      </div>

      <div class="input-field">
        <input id="number_machine" name="number_machine" type="text" class="form-control" placeholder="Номер машины"
          value="{{pki.number_machine}}">
        <div class="invalid-feedback">
          Номер машины
        </div>
      </div>

      <div class="input-field">
        <input type="hidden" name="id" value="{{pki._id}}">
      </div>
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button type="submit" class="btn btn-outline-success">Сохранить</button>
    </form>


  </div>
</div>