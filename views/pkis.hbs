<div id="showData"></div>

<input hidden="true" id="temp" value="0"></input>

<script>
    $(document).ready(function() {
    load_data();
  
    var timeoutID = null;
  
    $('#search').keyup(function() {
      
      $('#temp').val('0');
      clearTimeout(timeoutID);
      var search = $(this).val();
      
      if (search) {
        load_data(search);
      } else {
        load_data();
      }
    });
  });
</script>


