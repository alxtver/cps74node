{{#if registerError}}
<p class="alert alert-danger mt-1">{{registerError}}</p>
{{/if}}


<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->

        <!-- Icon -->
        <div class="fadeIn first mt-4">
            <img src="/images/auth.png" id="icon" alt="User Icon" />

            <!-- форма регистрациии -->
            <form action="/auth/register" method="POST" class="mt-5">
                <div class="form-group">
                    <input type="text" id="rlogin" class="form-control" name="username" placeholder="Логин"
                        required>
                </div>
                <div class="form-group mt-2">
                    <input type="text" id="group" class="form-control" name="group" placeholder="Группа" required>
                </div>
                <div class="form-group mt-2">
                    <input type="password" id="rpassword" class="pass-input form-control validate" name="password"
                        placeholder="Пароль" required>
                </div>
                <div class="form-group mt-2">
                    <input type="password" id="rpassword" class="pass-input form-control" name="passagain"
                        placeholder="Пароль ещё раз" required>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
                <input type="submit" class="btn btn-dark mt-4" value="Создать аккаунт">
            </form>
        </div>
    </div>
</div>
